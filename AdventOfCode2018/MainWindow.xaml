<Window x:Class="AdventOfCode2018.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventOfCode2018"
        mc:Ignorable="d"
        Title="Advent of Code 2018" Height="450" Width="400">
    <Grid Margin="10, 10, 10, 10">
        <StackPanel Orientation="Vertical">
            <Label Content="Click each button to access a challenge and solution."/>
                <Button Name="Day1Button" Height="30" Width="150" Margin="5, 5, 5, 5" Click="Day1Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8EF;" FontSize="20" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets"/>
                        <Label Content="Day 1"/>
                    </StackPanel>
                </Button>
            <Button Name="Day2Button" Height="30" Width="150" Margin="5, 5, 5, 5" Click="Day2Button_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xEB51;" FontSize="20" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets"/>
                    <Label Content="Day 2"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
